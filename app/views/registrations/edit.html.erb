
<div class="row">
  <div class="col-md-8">
    <h2><%= t('.titulo_editar_usuario') %></h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field form-group">
        <%= f.label :name, t('.nombres') %><br>
        <%= f.text_field :name , autofocus: true, class: 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= f.label :lastname, t('.apellidos') %><br>
        <%= f.text_field :lastname, class: 'form-control' %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('.esperando_confirmacion_de') %> <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field form-group">
        <%= f.label :password, t('.password') %> <i>(<%= t('.dejalo_en_blanco_si_no_lo_quieres_cambiar') %>)</i><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= f.label :password_confirmation, t('.confirmar_password') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= f.label :current_password, t('.password_actual') %> <i>(<%= t('.ingresa_tu_password_para_confirmar_cambios') %>)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
      </div>
    
      <div class="actions form-group">
        <%= f.submit t('.boton_actualizar'), class: 'btn btn-primary' %>
      </div>
    <% end %>
    </div>
</div>
<div class="row">
  <div class="col-md-8">
    <h3><%= t('.subtitulo_cancelar_cuenta') %></h3>
    
    <p><%= t('te_vas') %>? <%= button_to t('.boton_cancelar_cuenta'), registration_path(resource_name), data: { confirm: t('.confirmar_cancelacion') }, method: :delete, class: 'btn btn-danger' %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-8">
    <%= link_to t('.boton_atras'), :back, class: 'btn btn-warning' %>
  </div>
</div>