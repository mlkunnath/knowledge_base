<!DOCTYPE html>
<html>
<head>
  <title>No es plaje</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container floating-message-container" >
  <div class="row">
    <div class="col-md-4 col-md-offset-4 bring-to-front">
        <% if notice %>
          <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= notice %>
          </div>
        <% end %>
        <% if alert %>
          <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= alert %>
          </div>
        <% end %>
    </div>
   </div>
</div>
<%= render 'shared/navigation' %>
<div class="container">
  <div class="row">
    <div class="col-md-3 col-lg-3 hidden-sm hidden-xs">
      <!-- sidebar content -->
      <div class="page-header">
        <h3>No Es Plaje<br/><small>porque si lo modificas no es una copia ;)</small> </h3>
      </div>
      <%= render 'tags/tag_cloud'%>
    </div>
    <div class="col-md-9 col-lg-9 col-sm-8 col-xs-8">
      <%= yield %>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
</body>
</html>
