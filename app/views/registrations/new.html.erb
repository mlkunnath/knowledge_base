
<div class="row">
  <div class="col-md-8">
    <h2><%= t('.titulo_registro') %></h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages_user! %>
    
      <div class="field form-group">
        <%= f.label :name, t('.nombres') %><br>
        <%= f.text_field :name , autofocus: true, class: 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= f.label :lastname, t('.apellidos') %><br>
        <%= f.text_field :lastname, class: 'form-control' %>
      </div>
      
      <div class="field form-group">
        <%= f.label :email, t('.email') %><br />
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= f.label :password, t('.password') %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length  %> <%= t('.caracteres_minimos') %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>
    
      <div class="field form-group">
        <%= f.label :password_confirmation, t('.confirmar_password') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    
      <div class="actions form-group">
        <%= f.submit  t('.boton_crear_cuenta'), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= render "users/shared/links" %>
